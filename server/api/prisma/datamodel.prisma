type Recipe {
    id: ID! @unique
    name: String!
    description: String!
    maxServingWaitTime: Int,
    steps: [RecipeStep!]! @relation(name: "StepsInRecipe", onDelete: CASCADE)
    author: User! @relation(name: "RecipeCreatedBy")
}

type RecipeStep {
    id: ID! @unique
    idx: Int!
    description: String!
    duration: Int! # in minutes
    isAttended: Boolean!
    recipe: Recipe! @relation(name: "StepsInRecipe")
}

type Kitchen {
    id: ID! @unique
    name: String!,
}

type User {
    id: ID! @unique
    email: String! @unique
    encryptedPassword: String!
    recipes: [Recipe!]! @relation(name: "RecipeCreatedBy", onDelete: CASCADE)
    kitchens: [Kitchen!]!
}