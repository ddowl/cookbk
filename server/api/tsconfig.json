{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "esNext",
//    "strict": true,
    "outDir": "./dist",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "diagnostics": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "src/generated/**/*",
    "**/*.test.ts"
  ]
}