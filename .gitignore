#######################
# Cooking API ignores #
#######################
#
# Ignore bundler config.
.bundle

# Ignore the default SQLite database.
cooking-api/db/*.sqlite3
cooking-api/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
cooking-api/log/*
cooking-api/tmp/*
!cooking-api/log/.keep
!cooking-api/tmp/.keep

# Ignore uploaded files in development
cooking-api/storage/*
!cooking-api/storage/.keep

cooking-api/.byebug_history

# Ignore master key for decrypting credentials and more.
cooking-api/config/master.key

api/dist

##########################
# Cooking Client ignores #
##########################

# dependencies
node_modules/
.pnp/
.pnp.js

# testing
coverage/

# production
build/

# misc
.DS_Store
.env.local
.env.development.local
.env.test.local
.env.production.local

npm-debug.log*
yarn-debug.log*
yarn-error.log*

